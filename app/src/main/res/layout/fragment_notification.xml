<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.notifications.NotificationsFragment">

    <TextView
        android:id="@+id/tvNotificationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông báo thùng rác đầy"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Row 1: 2 cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Card 1: Thùng rác khu A đầy -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTrashA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_trash_full"
                        app:tint="#FF0000"
                        android:contentDescription="Icon thùng rác đầy"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thùng rác khu Phú Lợi đầy"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvPercentA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="80%"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FF0000" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2: Thùng rác khu B đầy -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTrashB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginStart="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_trash_full"
                        app:tint="#FF0000"
                        android:contentDescription="Icon thùng rác đầy"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thùng rác khu Thuận An đầy"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvPercentB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90%"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FF0000" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Row 2: 2 cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Card 3: Thùng rác khu C đầy -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTrashC"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_trash_full"
                        app:tint="#FF0000"
                        android:contentDescription="Icon thùng rác đầy"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thùng rác khu Hiệp Thành 2 đầy"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvPercentC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="75%"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FF0000" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 4: Thùng rác khu D đầy -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTrashD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginStart="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_trash_full"
                        app:tint="#FF0000"
                        android:contentDescription="Icon thùng rác đầy"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thùng rác khu Phú Lợi đầy"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvPercentD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="95%"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FF0000" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Row 3: 2 cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Card 5: Thùng rác khu E đầy -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTrashE"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_trash_full"
                        app:tint="#FF0000"
                        android:contentDescription="Icon thùng rác đầy"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thùng rác khu Chánh Nghĩa đầy"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvPercentE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="85%"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FF0000" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 6: Thùng rác khu F đầy -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTrashF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginStart="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_trash_full"
                        app:tint="#FF0000"
                        android:contentDescription="Icon thùng rác đầy"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thùng rác khu Lê Hồng Phong đầy"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvPercentF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70%"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FF0000" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>